<div class="container">
  <h1 class="text-center">My Favorite Pokemon</h1>
  <p class="text-center"><a href="/">Home</a> | Favorites</p>
  <% pokemon.forEach(pokemon => { %>
  <div class="well">
    <h2><%= pokemon.name %></h2>
    <form method="POST" action="/pokemon">
      <input hidden type="text" name="name" value="<%= pokemon.name %>" />
      <button class="btn btn-primary" type="submit">
        REMOVE This Favorite Pokemon
      </button>
    </form>

    <form method="POST" action="/pokemon">
      <input
        hidden
        type="text"
        name="name"
        value="<%= pokemon.removePokemon %>"
      />
      <button class="btn btn-primary" type="submit">
        Get More Details on your Favorite Pokemon
      </button>
    </form>
  </div>
  <% }); %>
</div>
