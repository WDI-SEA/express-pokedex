<div class="poke-header">
    <img src="<%= pokemon.sprites.front_default %>" alt="<%= pokemon.name %>" class="pokemon-img">
    <div class="poke-subheader">
        <h2 class="display-3 poke-name"><%= pokemon.name %></h2>
        <div class="poke-types">
            <% pokemon.types.forEach(type => { %>
                <p class="poke-type"><%= type.type.name %></p>
            <% }); %>
        </div>
    </div>
    <% if (!pokemon.isFavorited) { %>
    <form method="POST" action="/favorites">
        <input hidden type="text" name="name" value="<%= pokemon.name %>"/>
        <button class="btn btn-primary" type="submit">Add to Favorites</button>
    </form>
    <% } %>
</div>
<div class="poke-stats">
    <p>Weight: <%= pokemon.weight/10 %><span> kg</span></p>
    <p>Height: <%= pokemon.height/10 %><span> m</span></p>
    <% pokemon.stats.forEach(stat => { %>
        <p><%= stat.stat.name %> base: <%= stat.base_stat %></p>
    <% }); %>
</div>
<div class="poke-moves">
    <h3>Possible Moves:</h3>
    <% pokemon.moves.forEach(move => { %>
        <p class="col-sm-3"><%= move.move.name %></p>
    <% }); %>
</div>