<div class="home">
    <h1 id="title" class="text-center">The Original 151 Pokemon</h1>
    <p class="text-center">
      <a class="titleTwo" href="/pokemon">Click to View Favorites</a>
    </p>
    <div id="pokemonList">
      <% pokemon.forEach(function(pokemon) { %>
        <h2><%= pokemon.name %></h2>
        <form method="POST" action="/pokemon">
          <input hidden type="text" name="name" value="<%= pokemon.name %>">
          <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
        </form>
      </div>
      <% }); %>
</div>
