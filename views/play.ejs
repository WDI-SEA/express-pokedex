  <h1>The Original 151 Pokemon</h1>
      <h2><%= pokemon.name %></h2>
      <img src="<%= pokemon.imagesrc %>"> <br>
        <p id="status-message">Try and catch me!</p>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <input hidden type="text" name="pokemonapi_id" value="<%= pokemon.pokemonapi_id %>">
        <input hidden type="text" name="imagesrc" value="<%= pokemon.imagesrc %>">
        <input hidden type="text" name="height" value="<%= pokemon.height %>">
        <input hidden type="text" name="weight" value="<%= pokemon.weight %>">
        <input hidden type="text" name="experience" value="<%= pokemon.experience %>">
        <button class="btn btn-primary" type="submit">Catch</button>
      </form>
