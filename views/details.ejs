<!-- showing items
name
id
image (sprites.front_default)
weight
height
abillity(array.name)
type(array.type.name) -->

<h2><%= pokemon.name %></h2>

<div id="imgDetail">
    <img src="<%= pokemon.sprites.front_default %>">
    <ul>
        <li>Pok√©mon Id: <%= pokemon.id %></li>
        <li>Height: <%= pokemon.height %></li>
        <li>Weight: <%= pokemon.weight %></li>
        <li>Abilities: <% pokemon.abilities.forEach(ability => { %>
            <ul>
                <li><%= ability.ability.name %></li>
            </ul>
            <% }) %>
        </li>
        <li>Types: <% pokemon.types.forEach(type => { %>
            <ul>
                <li><%= type.type.name %></li>
            </ul>
            <% }) %>
        </li>
    </ul>
</div>