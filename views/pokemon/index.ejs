<div class="container">
    <h1 class="text-center">The Original 151 Pokemon</h1>
    <p class="text-center">
      <a href="/">Back to the Pokedex</a>
    </p>
  
    <% pokemon.forEach(function(pokemon) { %>
      <div class="well">
        <h2><a href="/pokemon/<%= pokemon.id %>"><%= pokemon.name %></a></h2>
        </br>
        <form method="POST" action="/pokemon/<%= pokemon.id %>/?_method=DELETE">
          <button class="btn btn-danger" type="submit" value="DELETE">Delete Favorite Pokemon</button>
        </form>
      </div>
    <% }); %>
  </div>
  