  <h1>Favorite Pokemon</h1>
  


<div class="fave ">
  <% if (poke.length > 0) { %>
    <% poke.forEach(function(p) { %>
  <div class="row ">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1 z-depth-5">
        <div class="card-content white-text">
          <span class="card-title"><%= p.name.charAt(0).toUpperCase() + p.name.slice(1) %></span>
        </div>
        <div class="card-action">
            <a href="/pokemon/<%= p.id %>">Pokedex Entry for <%= p.name.charAt(0).toUpperCase() + p.name.slice(1) %></a>
            <hr />
            <form method="POST" action="/pokemon/<%=p.id%>?_method=DELETE" >
                <input type="submit" class="btn-small red" value="Delete Pokémon">
            </form>
        </div>
      </div>
    </div>
  </div>
  <% }) %>
  <% } else { %>
    <p>(No favorite Pokémon)</p>
    <% } %>
  </div>
 