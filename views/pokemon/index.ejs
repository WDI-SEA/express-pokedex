<div class="container">
  <h1 class="text-center">Favourites</h1>
  <p class="text-center">
    <a href="/">Home</a>
  </p>

<% poke.forEach(function(p) { %>
  <div class="box col-xs-6 col-sm-3 col-md-3 col-lg-2">
    <h3><%= p.pokemon %></h3>
    <form method="POST" action="/pokemon/delete">
      <input hidden type="text" name="name" value="<%= p.pokemon %>">
      <button class="button" type="submit">X</button>
    </form>
  </div>
<%  }) %>

</div>
