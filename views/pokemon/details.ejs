        <li>ID: <%= pokemon.id %></li>
        <li>Weight: <%= pokemon.pokeWeight %></li>
        <li>Height: <%= pokemon.pokeHeight %></li>
        <li> <img src="<%= pokemon.pokeImage %>" alt="Image of pokemon"></li>
        <li>Created: <%= pokemon.createdAt %></li>
        <li>Updated: <%= pokemon.updatedAt %></li>
