<main class="container">
  <h1 class="text-center">Favorites</h1>
  <nav>
    <a href="/">Home</a>
  </nav>

  <section class="collection">
    <% faves.forEach(function(pokemon) { %>
      <a href="/pokemon/<%=pokemon.name%>" class="poke-link well">
        <div>
          <h2><%= pokemon.name%></h2>
          
          <form method="POST" action="/pokemon/<%= pokemon.name %>?_method=DELETE">
            <input
              hidden
              type="text"
              name="name"
              value="<%= pokemon.name %>"
            />
            <button class="btn btn-primary" type="submit">
              Remove
            </button>
          </form>
          
        </div>
      </a>
    <% }); %>
  </section>
</main>
  