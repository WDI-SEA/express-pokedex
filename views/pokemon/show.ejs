<div class="container">
  <h1 class="text-center">Pokemon Information</h1>
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  </p>

<!-- pokemon is an object about one pokemon -->
  <div class="well">
    <h3>Name: <%= pokemon.name %></h3>
    <h3>Height: <%= pokemon.height %></h3>
    <h3>Weight: <%= pokemon.weight %></h3>
  </div>
  <div class="well">
    <h3>Front Default Image:</h3>
    <img src="<%= pokemon.sprites.front_default %>" alt="Front Default Image">
  </div>
  <div class="well">
    <h3>Front Shiny Image:</h3>
    <img src="<%= pokemon.sprites.front_shiny %>" alt="Front Shiny Image">
  </div>
</div>
