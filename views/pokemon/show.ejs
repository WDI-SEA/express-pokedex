<!-- we pass in single pokemon data here -->
<div class="container">
    <h1 class="text-center">Pokedex Data</h1>
    <p class="text-center">
      <a href="/pokemon">Favorites</a>
    </p>
    <% const {name, id, sprites, types} = pokemon; %>

    <h1><%= name %></h1>
    <h2><%= id %></h2>
    <img src="<%= sprites.front_default %>" alt="" />
    
    <% types.forEach(type => { %>
    <p><%= type.type.name %></p>
    <% }) %>
    
    <p>
    <%= text.flavor_text %>
    </p>

  </div>