<div class="container">
  <h1 class="card-title"><%= pokemon.name %></h1>

  <img src="<%= pokemon.sprites.front_default %>" />

  <h2>Types:</h2>
  <ul class="list-group">
    <% pokemon.types.forEach( (type) => { %>
      <li class="list-group-item"><%= type.type.name %></li>
    <% }); %>
  </ul>

  <h2>Abilities:</h2>
  <ul class="list-group">
    <% pokemon.abilities.forEach( (ability) => { %>
      <li class="list-group-item"><%= ability.ability.name %></li>
    <% }); %>
  </ul>

  <h2>Stats:</h2>
  <ul class="list-group">
    <% pokemon.stats.forEach( (stat) => { %>
      <li class="list-group-item"><%= stat.stat.name %>: <%= stat.base_stat %></li>
    <% }); %>
  </ul>
</div>
