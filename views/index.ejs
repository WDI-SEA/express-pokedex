<link rel="stylesheet" type="text/css" href="css/style.css" />

<div class="container">
  <h1 class="text-center flashit">The Original 151 Pokemon</h1>
  <p class="text-center">
    <a class="menu" href="/pokemon">Favorites</a>
  </p>

  <% pokemon.forEach(function(pokemon) { %>
    <div class="well">
      <h2 class="name"><%= pokemon.name %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button id="fave" class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>
