<div class="container">
  <h1 class="text-center">The Original 151 Pokemon</h1>
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  </p>

  <% pokemon.forEach(function(pokemon) { %>
    <div class="well">
      
        <a href="/pokemon/<%= pokemon.name %>"<h2 class="name"><%= pokemon.name %></h2></a>
      
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button class="btn btn-primary" type="submit">Pick Your Favorite Pok√®mans</button>
      </form>
    </div>
  <% }); %>
</div>
