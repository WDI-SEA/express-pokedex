<div class="container">
  <h1 class="">The Original Pokemon</h1>

  <% pokemon.forEach(function(pokemon) { %>
    <div class="well">
      <h2><%= pokemon.name %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button class="btn btn-primary indigo accent-4 yellow-text text-accent-3" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>
