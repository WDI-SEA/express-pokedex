<div class="container">
  <h1 class="text-center">The Original 151 Pokemon Cards</h1>
  <p class="text-center">
    <a href="/pokemon">Favorites Page</a>
  </p>

  <% pokemon.forEach(function(pokemon) { %>
    <div class="well">
      <h3><%= pokemon.name[0].toUpperCase() + pokemon.name.substr(1,pokemon.name.length) %></h3>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>
