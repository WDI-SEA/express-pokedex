<div class="container">
  <h1 class="text-center">The Original 151 Pokemon</h1>
  <p class="text-center">
    <a class="btn btn-primary" href="/pokemon">Favorites</a>
  </p>
  
  <div class='listDiv'>
    <% pokemon.forEach(function(pokemon) { %>
      <div class="well">
        <h2><%= pokemon.name %></h2>
        <div class='btnDiv'>
          <form method="POST" action="/pokemon">
            <input hidden type="text" name="name" value="<%= pokemon.name %>">
            <button class="btn btn-primary" type="submit">Add to Pokedex</button>
          </form>
          <a class="btn btn-primary" href="/pokemon/<%= pokemon.name %>">View Pokemon</a>
        </div>
      </div>
    <% }); %>
  </div>
</div>
