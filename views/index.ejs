<div class="container">
  <h1 class="text-center">The Original 151 Pokemon</h1>
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  </p>

  <% pokemons.forEach(function(pokemon) { %>
 
    <div class="well">
      <h2><%=pokemon.name.charAt(0).toUpperCase() + pokemon.name.slice(1);%></h2>
      <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon<%=pokemon.url.match(/\/\d+/)%>.png">
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <input hidden type="text" name="imgId" value="<%= pokemon.url.match(/\/\d+/)%>.png %>">
        <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>
