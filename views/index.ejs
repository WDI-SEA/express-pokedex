<div class="container">
  <h1 class="text-center">The Original 151 Pokemon</h1>

  <% pokemon.forEach(function(pokemon, index, array) { %>
    <div class="well">
      <h2><%- pokemon.name %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <a href="/pokemon/<%- pokemon.name %>" class="btn btn-primary">Details</a>
        <button class="btn btn-warning" type="submit">Add to Favorites</button>
      </form>
    </div>
  <% }); %>
</div>
