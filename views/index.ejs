<div class="container">
  <h1 class="text-center">The Original 151 Pokemon</h1>


     <div class="row nav">
        <div class="col-sm-1 col-sm-offset-3 text-center">
           <a class="btn btn-primary fav-button" href="/l"><<</a>
        </div>
        <div class="col-sm-4 text-center">
           <a class="btn btn-primary fav-button" href="/pokemon">See All Favorites</a>
        </div>
        <div class="col-sm-1 text-center">
           <a class="btn btn-primary fav-button" href="/r">>></a>
        </div>
     </div>

     <% pokemon.forEach(function(pokemon) { %>
        <div class="row well center-block">

             <div class="col-sm-4">
                <%= console.log(pokemon); %>
                <h2><%= pokemon.name; %></h2>
             </div>
             <div class="col-sm-4 col-sm-offset-4">
                <form  class="star-button" method="POST" action="/pokemon">
                   <input hidden type="text" name="name" value="<%= pokemon.name %>">
                   <button class="btn btn-primary " type="submit">
                      <img class="star" src="img/favourite-star.svg">Add to Favorite Pokemon
                   </button>
                </form>
             </div>

       </div>
    <% }); %>


</div>
