<div class="container">
  <h1 class="text-center">The Original 151 Pokemon</h1>

  <% pokemon.forEach(function(pokemon) { %>
    <div class="well">
      <h2><%= pokemon.name %></h2>
      <form class="pokemon" method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button class="waves-effect waves-purple deep-purple lighten-2 btn" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>
