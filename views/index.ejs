<div class="container">


  <div class="title-container">
  <img class="title" src="https://i.imgur.com/o1ZKSwa.png" width="50%" height="50%"  alt="pokemon title logo">
  </div>
 
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  </p>
 <div class="list-container">
  <% pokemon.forEach(function(pokemon) { %>
    <div class="well tile">
      <h2><%= pokemon.name %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
  
 </div>
 
</div>
