<div class="container">
  <h1 class="text-center headline">The Original 151 Pokemon</h1>
  <p class="text-center">
    <a class="waves-effect waves-light btn" href="/pokemon">View My Favorites</a>
  </p>

  <% pokemon.forEach(function(pokemon) { %>
    <div class="well">
      <h2><%= pokemon.name %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">

        <button class="waves-effect waves-light btn" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>
