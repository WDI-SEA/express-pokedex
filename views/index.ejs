<div class="container">
  <h1 class="text-center">The Original Pokemon </h1>
  <p class="text-center">
    <a href="/pokemon">My Favorites</a>
  </p>

  <% pokemon.forEach(function(pokemon) { %>
    <div class="well">
      <h2><%= pokemon.name %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.id %>">
        <button class="btn btn-primary" type="submit">Add to My Favorites</button>
      </form>
    </div>
  <% }); %>
</div>


