<main class="container">
  <div class="row">
    <h1 class="center-align indextitle">The Original 151 Pokemon</h1>
    <div class="carousel caraheight">
      <% pokemon.forEach(function(pokemon) { %>
        <div class="col s6 m5 l4 carousel-item">
          <div class="card blue darken-1 center-align hoverable">
            <div class="card-title">
              <h4 class="catch">Catch</h4>
            </div>
            <div class="card-image">
              <form method="POST" action="/pokemon" class="input-field">
                <input hidden type="text" name="name" value="<%= pokemon.name %>">
                <input type="image" src="/img/ball.png" alt="Submit" width="100" height="100">
              </form>
            </div>
            <div class="card-content padrem">
              <p class="card-title capitol catch"><%= pokemon.name %></p>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</main>
