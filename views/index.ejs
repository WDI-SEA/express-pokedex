<%- include('./partials/header.ejs')%>
<div class="container">
  <h1 class="text-center">The Original 151 Pokemon</h1>
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  </p>

  <% pokemon.forEach(function(pokemon){ %>
    <div class="well">
      <h2><%= pokemon.name %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <!-- <input hidden type="text" name="url" value="<%= //pokemon.url %>"> -->
        <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
      </form>
      <form method="GET" action="/pokemon/<%= pokemon.name %>">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <!-- <input hidden type="text" name="url" value="<%= //pokemon.url %>"> -->
        <button class="btn btn-primary" type="submit">See the deets</button>
      </form>
    </div>
  <% }); %>
</div>
<%- include('./partials/footer.ejs') %>