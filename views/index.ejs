
<div class="container">
  <h1 class="text-center">Shiny Pokedex</h1>
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  </p>

  <% pokemon.forEach(function(pokemon) { %>
    
    <div class="well">
      <h2><%= pokemon.name %></h2>
      <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/shiny/<%= pokemon.url.split('/').filter(c => !isNaN(c)&&c!=='')%>.png" class="card-img-top" alt="...">

      <a href="/pokemon/<%= pokemon.name %>">Pokemon Info</a>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>
