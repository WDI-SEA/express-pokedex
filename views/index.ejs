<div>
  <h3>Pokemon Collector</h3>
  <p>
    <a href="/pokemon">Favorites</a>
  </p>

  <div class="carousel">
    <% pokemon.forEach((poke) => { %>
    <div class="card carousel-item">
      <div class="card-image">
        <img src="<%= poke.sprite %>">
        <form method="POST" action="/pokemon">
          <input hidden type="text" name="name" value="<%= poke.name %>">
          <button class="btn-floating halfway-fab waves-effect waves-light red" type="submit">&#x2665;</button>
        </form>
      </div>
      <div class="card-content">
        <span class="card-title">
          <%= poke.name %>
        </span>

        <p>Content</p>
      </div>
    </div>
    <% }); %>
  </div>

</div>