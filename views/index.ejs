<div class="container">
  <h1 class="text-center">The Original 151 Pokemon</h1>
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  </p>

  <div class="main-header">
    <h2>Welcome Trainer! Consult the MasterDex to learn more about each Pokemon</h2>
    <img src="https://assets.vg247.com/current//2016/08/pkmn_pokedex.jpg" alt="pokemon show scene with pokedex picture">
  </div>
  
  <% pokemon.forEach(function(pokemon) { %>
    <div class="well">
      <h2><%= pokemon.name %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>
