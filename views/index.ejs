<div class="container">
  <h1 class="text-center">Pokemon</h1>
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  </p>
  <% pokemon.forEach(function(pokemon) { %>
    <div>
      <h2><%= pokemon.name %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button type="submit">Add Pokemon to Favorites</button>
      </form>
    </div>
  <% }); %>
</div>
