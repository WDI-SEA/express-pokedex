<div class="container">
  <h1 class="text-center">My Favorite Pokemon</h1>


  <% pokemon.forEach(function(pokemon) { %>
    <div class="well">
      <h2><%= pokemon.name %></h2>

      <form id="delete" method="POST" action="<%= '/pokemon/'+pokemon.id+'?_method=DELETE'%>">
         <button class="btn btn-primary" type="submit">Delete Pokemon</button>
       </form>

      <br>

      <a class=" btn btn-primary" href="<%='/pokemon/'+pokemon.id%>">More Info</a>


    </div>
  <% }); %>
  <div class ="text-center">
    <a class="btn btn-primary" href="/">Pokedex</a>
  </div>
</div>
